<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="czy.progressbar.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="重置" />


        <czy.progressbar.ChuzyProgressBar
            android:id="@+id/roundProgressBar1"
            style="0"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android_custom:circleColor="#4054b2"
            android_custom:circleWidth="5dp"
            android:background="#363636"
            android_custom:progressColor="#fb9330"
            android_custom:progressValueColor="#fdfb37"
            android_custom:progressValueSize="20sp"
            android_custom:showValue="true" />

        <Button
            android:id="@+id/rest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置" />


        <czy.progressbar.ChuzyProgressBar
            android:id="@+id/roundProgressBar2"
            style="0"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android_custom:circleColor="#4054b2"
            android_custom:circleWidth="5dp"
            android:background="#363636"
            android_custom:progressColor="#fb9330"
            android_custom:progressValueColor="#fdfb37"
            android_custom:progressValueSize="20sp"
            android_custom:showValue="true" />

    </LinearLayout>


</RelativeLayout>
